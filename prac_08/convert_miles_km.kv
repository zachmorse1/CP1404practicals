BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 42
            on_text: app.handle_calculation(self.text)
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: "Up"
                on_press: app.handle_increment(input_number.text, 1)

            Button:
                text: "Down"
                on_press: app.handle_increment(input_number.text, -1)
#    Button:
#        text: "Convert m to km"
#        font_size: 42
#        on_press: app.handle_calculation()
    Label:
        id: output_label
        text: app.output
        font_size: 42
        color: "yellow"


